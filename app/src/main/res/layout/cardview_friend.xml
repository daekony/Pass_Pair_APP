<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_friend_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left|top"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:civ_border_color="#f1e6e6fa"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/card_friend_name"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/card_friend_image"
            android:layout_toLeftOf="@+id/card_friend_gift"
            android:layout_toRightOf="@+id/card_friend_image"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/card_friend_message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_friend_page"/>

        <ImageButton
            android:id="@+id/card_friend_gift"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/card_friend_message"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/card_friend_message"
            android:layout_toStartOf="@+id/card_friend_message"
            android:background="#00000000"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gift" />
    </RelativeLayout>

</LinearLayout>