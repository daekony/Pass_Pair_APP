<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_map_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left|top"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:civ_border_color="#f1e6e6fa"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/card_map_name"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/card_map_image"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/card_map_dis"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left"
            android:layout_toRightOf="@+id/card_map_icon"
            android:layout_marginLeft="20dp"
            android:text="0m"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/card_map_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_distance"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/card_map_name"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>