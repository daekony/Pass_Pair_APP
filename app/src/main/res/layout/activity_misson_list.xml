<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.nccu.mis.passpair.Task.MissionList">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="#dcdcdc"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/mission_title"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mission"
            android:padding="5dp"/>
        <ListView
            android:id="@+id/mission_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent_color"/>
        <!--<android.support.v7.widget.RecyclerView android:id="@+id/recycletask" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/grayback"/>-->

    </LinearLayout>
</RelativeLayout>
